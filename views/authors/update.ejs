<%- include('../layout/header') %>

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center g-4"> <!-- Thêm lớp justify-content-center vào đây -->
        <div class="col-sm-12 col-xl-6"> <!-- Giảm kích thước cột để nội dung không quá rộng -->
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Cập nhật tác giả</h6>
                <form action="/authors/update/<%= author._id %>" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Tên Cập Nhật: </label>
                        <input type="text" class="form-control" id="name" name="name" required aria-describedby="usernameHelp">
                    </div>
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>
